# ========================================
# PAQUETERÍA v1.0 - Variables de Entorno
# ========================================
# Copiar este archivo a .env y configurar con tus valores reales
# cp env.example .env
# ========================================

# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================
APP_NAME=PAQUETES EL CLUB
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
TZ=America/Bogota

# ========================================
# BASE DE DATOS - AWS RDS POSTGRESQL
# ========================================
# Formato: postgresql://usuario:password@host:puerto/nombre_base_datos
# Ejemplo para RDS: postgresql://usuario:password@tu-rds-endpoint.us-east-1.rds.amazonaws.com:5432/paqueteria_v4
# IMPORTANTE: Escapar caracteres especiales en la contraseña con % o usar comillas
DATABASE_URL=postgresql://usuario:password@tu-rds-endpoint.us-east-1.rds.amazonaws.com:5432/paqueteria_v4

# Variables alternativas (opcional, si no usas DATABASE_URL)
POSTGRES_USER=tu_usuario
POSTGRES_PASSWORD=tu_password
POSTGRES_HOST=tu-rds-endpoint.us-east-1.rds.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_DB=paqueteria_v4

# ========================================
# SEGURIDAD - JWT
# ========================================
# IMPORTANTE: Generar una clave secreta segura para producción
# Puedes generar una con: openssl rand -hex 32
SECRET_KEY=tu-secret-key-super-seguro-de-produccion-cambiar-aqui
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ========================================
# REDIS - CACHE Y COLAS
# ========================================
REDIS_URL=redis://:tu_redis_password@redis:6379/0
REDIS_PASSWORD=tu_redis_password_seguro
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ========================================
# AWS S3 - ALMACENAMIENTO DE ARCHIVOS
# ========================================
AWS_ACCESS_KEY_ID=tu_aws_access_key_id
AWS_SECRET_ACCESS_KEY=tu_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tu-bucket-s3-paqueteria

# ========================================
# SMTP - CORREO ELECTRÓNICO
# ========================================
SMTP_HOST=smtp.tu-servidor.com
SMTP_PORT=587
SMTP_USER=tu_email@dominio.com
SMTP_PASSWORD=tu_password_email
SMTP_FROM_NAME=PAQUETES EL CLUB
SMTP_FROM_EMAIL=tu_email@dominio.com

# ========================================
# SMS - LIWA.CO (Colombia)
# ========================================
LIWA_API_KEY=tu_liwa_api_key
LIWA_ACCOUNT=tu_liwa_account
LIWA_PASSWORD=tu_liwa_password
LIWA_AUTH_URL=https://api.liwa.co/v2/auth/login
LIWA_FROM_NAME=PAQUETES EL CLUB

# ========================================
# TARIFAS
# ========================================
BASE_STORAGE_RATE=1000
BASE_DELIVERY_RATE_NORMAL=1500
BASE_DELIVERY_RATE_EXTRA_DIMENSIONED=2000
OVERTIME_RATE_PER_24H=1000
CURRENCY=COP

# ========================================
# ARCHIVOS
# ========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
MAX_FILE_SIZE_MB=5
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx
MAX_FILE_UPLOADS=3

# ========================================
# EMPRESA
# ========================================
COMPANY_NAME=PAQUETES EL CLUB
COMPANY_DISPLAY_NAME=PAQUETES EL CLUB
COMPANY_SHORT_NAME=PEC
COMPANY_WEBSITE=https://paquetes.com.co
COMPANY_ADDRESS=Cra. 91 #54-120, Local 12
COMPANY_PHONE=3334004007
COMPANY_EMAIL=guia@papyrus.com.co

# ========================================
# CONFIGURACIÓN GEOGRÁFICA
# ========================================
DEFAULT_COUNTRY=Colombia
DEFAULT_TIMEZONE=America/Bogota
DEFAULT_PHONE_PREFIX=+57
DEFAULT_PHONE_LENGTH=10

# ========================================
# URLs Y DOMINIOS
# ========================================
PRODUCTION_URL=https://paquetes.com.co
DEVELOPMENT_URL=http://localhost:8000
TRACKING_BASE_URL=https://paquetes.com.co/seguimiento

# ========================================
# CONFIGURACIÓN DE MENSAJES SMS
# ========================================
SMS_DAILY_LIMIT=1000
SMS_MONTHLY_LIMIT=30000
SMS_MAX_MESSAGE_LENGTH=2000
SMS_DEFAULT_SENDER=PAQUETES EL CLUB

# ========================================
# PLANTILLAS DE MENSAJES SMS
# ========================================
SMS_ANNOUNCEMENT_TEMPLATE=PAQUETES EL CLUB: Su paquete con guía {guide_number} ha sido anunciado. Código: {tracking_code}. Más info: {tracking_url}
SMS_RECEIVED_TEMPLATE=PAQUETES EL CLUB: Su paquete {guide_number} ha sido RECIBIDO en nuestras instalaciones. Código: {tracking_code}. Procesaremos su entrega pronto.
SMS_DELIVERED_TEMPLATE=PAQUETES EL CLUB: ¡Su paquete {guide_number} ha sido ENTREGADO exitosamente! Código: {tracking_code}. Gracias por confiar en nosotros.
SMS_CANCELLED_TEMPLATE=PAQUETES EL CLUB: Su paquete {guide_number} ha sido CANCELADO. Código: {tracking_code}. Contacte con nosotros para más información.
SMS_PAYMENT_REMINDER_TEMPLATE=PAQUETES EL CLUB: Tiene un pago pendiente por ${amount} COP para el paquete {guide_number}. Realice el pago para continuar con la entrega.

# ========================================
# CONFIGURACIÓN DE UI
# ========================================
TOAST_DEFAULT_DURATION=5000
TOAST_SUCCESS_DURATION=3000
TOAST_ERROR_DURATION=5000
TOAST_INFO_DURATION=2000
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================
GRAFANA_PASSWORD=tu_grafana_password
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ========================================
# CONFIGURACIÓN DE LOGS
# ========================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ========================================
# CONFIGURACIÓN PWA
# ========================================
PWA_NAME=PAQUETES EL CLUB
PWA_SHORT_NAME=Paquetes
PWA_DESCRIPTION=Sistema de gestión de paquetería
PWA_THEME_COLOR=#3B82F6
PWA_BACKGROUND_COLOR=#FFFFFF

# ========================================
# DATOS DE PRUEBA (Solo desarrollo)
# ========================================
TEST_PHONE_NUMBER_1=3000000000
TEST_PHONE_NUMBER_2=3001234567
TEST_PHONE_NUMBER_3=3009876543

