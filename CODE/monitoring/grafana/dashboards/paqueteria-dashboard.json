{
  "dashboard": {
    "id": null,
    "uid": "paqueteria-dashboard",
    "title": "PAQUETERIA v1.0 - Dashboard de Monitoreo",
    "tags": ["paqueteria", "monitoring"],
    "timezone": "America/Bogota",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Estado de Servicios",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"paqueteria-app\"}",
            "legendFormat": "API",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Uso de CPU - API",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(process_cpu_user_seconds_total{job=\"paqueteria-app\"}[5m]) * 100",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Uso de Memoria - API",
        "type": "timeseries",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"paqueteria-app\"} / 1024 / 1024",
            "legendFormat": "Memory Usage (MB)",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Solicitudes HTTP por Segundo",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"paqueteria-app\"}[5m])",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "links": []
  }
}
